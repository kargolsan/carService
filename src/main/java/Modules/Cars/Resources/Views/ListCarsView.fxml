<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="320.0" prefWidth="463.0" xmlns="http://javafx.com/javafx/8.0.91" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Modules.Cars.Controllers.ListCarsController">
    <children>
      <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox prefWidth="200.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#refresh" text="%tab.list_cars.button.refresh" />
                  <Button mnemonicParsing="false" onAction="#add" text="%tab.list_cars.button.add" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
              <TableView id="tableCars" fx:id="tableCars" focusTraversable="false" prefHeight="262.0" prefWidth="443.0" VBox.vgrow="ALWAYS">
                  <columns>
                      <TableColumn id="id" fx:id="id" editable="false" maxWidth="50.0" prefWidth="30.0" text="%tab.list_cars.table_view.id" />
                      <TableColumn id="vin" fx:id="vin" editable="false" prefWidth="110.0" text="%tab.list_cars.table_view.vin" />
                      <TableColumn id="note" fx:id="note" editable="false" prefWidth="110.0" text="%tab.list_cars.table_view.note" />
                      <TableColumn id="registrationNumber" fx:id="registrationNumber" editable="false" prefWidth="110.0" text="%tab.list_cars.table_view.registration_number" />
                      <TableColumn id="createdAt" fx:id="createdAt" editable="false" prefWidth="110.0" text="%tab.list_cars.table_view.created_at" />
                      <TableColumn id="updatedAt" fx:id="updatedAt" editable="false" prefWidth="110.0" text="%tab.list_cars.table_view.updated_at" />
                  </columns>
                  <contextMenu>
                      <ContextMenu onShowing="#showingContextMenu">
                          <items>
                              <MenuItem fx:id="delete" mnemonicParsing="false" onAction="#delete" text="%tab.list_cars.context_menu.delete" />
                          </items>
                      </ContextMenu>
                  </contextMenu>
              </TableView>
         </children>
      </VBox>
    </children>
</AnchorPane>
