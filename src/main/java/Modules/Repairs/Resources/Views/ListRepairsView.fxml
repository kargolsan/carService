<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="385.0" prefWidth="571.0" xmlns="http://javafx.com/javafx/8.0.91" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Modules.Repairs.Controllers.ListRepairsController">
    <children>
      <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox prefWidth="200.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#refresh" text="%tab.list_repairs.button.refresh" />
                  <Button mnemonicParsing="false" onAction="#add" text="%tab.list_repairs.button.add" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
              <TableView id="tableRepairs" fx:id="tableRepairs" focusTraversable="false" VBox.vgrow="ALWAYS">
                  <columns>
                      <TableColumn id="id" fx:id="id" editable="false" maxWidth="50.0" prefWidth="30.0" text="%tab.list_repairs.table_view.id" />
                  <TableColumn id="dateStart" fx:id="dateStart" editable="false" maxWidth="150.0" prefWidth="100.0" text="%tab.list_repairs.table_view.date_start" />
                  <TableColumn id="dateEnd" fx:id="dateEnd" editable="false" maxWidth="150.0" minWidth="0.0" prefWidth="100.0" text="%tab.list_repairs.table_view.date_end" />
                      <TableColumn id="note" fx:id="note" editable="false" prefWidth="110.0" text="%tab.list_repairs.table_view.note" />
                      <TableColumn id="carId" fx:id="carId" editable="false" maxWidth="50.0" prefWidth="30.0" text="%tab.list_repairs.table_view.car_id" visible="false" />
                      <TableColumn id="carRegistrationNumber" fx:id="carRegistrationNumber" editable="false" maxWidth="150.0" prefWidth="130.0" text="%tab.list_repairs.table_view.car_registration_number" />
                      <TableColumn id="createdAt" fx:id="createdAt" editable="false" prefWidth="110.0" text="Created at" />
                      <TableColumn id="updatedAt" fx:id="updatedAt" editable="false" prefWidth="110.0" text="Updated at" />
                  </columns>
                  <contextMenu>
                      <ContextMenu onShowing="#showingContextMenu">
                          <items>
                              <MenuItem fx:id="delete" mnemonicParsing="false" onAction="#delete" text="%tab.list_repairs.context_menu.delete" />
                          </items>
                      </ContextMenu>
                  </contextMenu>
              </TableView>
         </children>
      </VBox>
    </children>
</AnchorPane>
